{
    "exercises": [
      {{- $first := true -}}
      {{- range $index, $page := .Site.Pages -}}
          {{- if ne $page.Type "json" -}}
              {{- $exercises := $page.Scratch.Get "exercise" -}}
              {{- $i := 0 -}}
              {{- range $exercises -}}
                  {{- if not $first -}}, {{- end -}}
                  {{- $first = false -}}
                  {{- . | jsonify (dict "indent" "    ") -}}
              {{- end -}}
          {{- end -}}
      {{- end -}}
      ],
    "questionaires": [
      {{- $first = true -}}
      {{- range $index, $page := .Site.Pages -}}
          {{- if ne $page.Type "json" -}}
              {{- $questionaire := $page.Scratch.Get "questionaire" -}}
              {{- $i := 0 -}}
              {{- range $questionaire -}}
                  {{ if not $first -}}, {{- end -}}
                  {{ $first = false -}}
                  {{- . | jsonify (dict "indent" "    ") -}}
              {{- end -}}
          {{- end -}}
      {{- end -}}
      ]
  }